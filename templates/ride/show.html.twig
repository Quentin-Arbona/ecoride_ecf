{% extends 'layout.html.twig' %}
{% block title %}Détail du trajet - EcoRide{% endblock %}

{% block content %}
<main class="bg-light py-4">
    <div class="container">
        <!-- Lien de retour -->
        <div class="mb-3">
            <a href="{{ path('app_ride_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>

        <!-- Conteneur principal avec une largeur maximale -->
        <div class="mx-auto" style="max-width: 1000px;">
            <!-- En-tête du trajet -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <!-- Titre et statut -->
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h1 class="h3 mb-1 d-flex align-items-center">
                                {{ ride.departurePlace }} → {{ ride.arrivalPlace }}
                                {% if ride.status == constant('App\\Enum\\RideStatus::CANCELLED') %}
                                    <span class="badge bg-danger ms-2">Annulé</span>
                                {% endif %}
                            </h1>
                            <div class="text-muted small">
                                <i class="bi bi-calendar-event me-1"></i> {{ ride.departureDate|date('d/m/Y') }} •
                                <i class="bi bi-clock me-1"></i> {{ ride.departureTime|date('H:i') }} → {{ ride.arrivalTime|date('H:i') }}
                            </div>
                        </div>
                        <span class="badge
                            {% if ride.status == 'PENDING' %}bg-warning
                            {% elseif ride.status == 'ACTIVE' %}bg-success
                            {% elseif ride.status == 'COMPLETED' %}bg-secondary
                            {% elseif ride.status == 'CANCELLED' %}bg-danger
                            {% endif %}">
                            {{ ride.status.getLabel() }}
                        </span>
                    </div>

                    <!-- Row principale avec conducteur et véhicule -->
                    <div class="row g-4">
                        <!-- Colonne gauche: Conducteur et détails -->
                        <div class="col-md-7">
                            <!-- Conducteur -->
                            <div class="d-flex align-items-center mb-4">
                                <img src="{{ asset('img/default-avatar.png') }}" alt="Avatar" class="rounded-circle me-3" width="60" height="60">
                                <div>
                                    <h5 class="mb-0">{{ ride.driver.getFullName()|default('Utilisateur') }}</h5>
                                    <div class="text-muted small">
                                        ⭐ {{ ride.driver.getAverageRating()|default('Nouveau') }} •
                                        {{ ride.driver.ridesAsDriver|length }} trajet(s) proposé(s)
                                    </div>
                                </div>
                            </div>

                            <!-- Détails du trajet en 2 colonnes -->
                            <div class="row mb-4">
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-people me-2 text-success"></i>
                                        <span>{{ ride.availableSeats }} place(s) disponible(s)</span>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-currency-euro me-2 text-success"></i>
                                        <span>{{ ride.pricePerSeat|number_format(0) }} crédits par place</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-clock me-2 text-success"></i>
                                        <span>Durée estimée : {{ ride.estimatedDuration ? ride.estimatedDuration ~ ' min' : 'Non spécifiée' }}</span>
                                    </div>
                                    {# <div class="d-flex align-items-center">
                                        <i class="bi bi-hourglass-split me-2 text-success"></i>
                                        <span>Durée calculée : {{ ride.duration.format('%h:%i') }}</span>
                                    </div> #}
                                </div>
                            </div>

                            <!-- Description -->
                            {% if ride.description %}
                            <div class="mb-4">
                                <h5 class="fw-semibold mb-2">Informations complémentaires</h5>
                                <div class="p-3 bg-light rounded">
                                    <p class="mb-0">{{ ride.description|nl2br }}</p>
                                </div>
                            </div>
                            {% endif %}

                            <!-- Boutons d'action -->
                            <div class="d-flex flex-column gap-2">
                                {% if app.user %}
                                    {% if app.user == ride.driver %}
                                        <div class="d-flex gap-2">
                                            <a href="{{ path('app_ride_edit', {id: ride.id}) }}" class="btn btn-outline-primary flex-grow-1">
                                                <i class="bi bi-pencil me-1"></i> Modifier
                                            </a>
                                            {% if ride.status != constant('App\\Enum\\RideStatus::CANCELLED') %}
                                                <button class="btn btn-outline-danger flex-grow-1" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                                    <i class="bi bi-x-circle me-1"></i> Annuler
                                                </button>
                                            {% endif %}
                                        </div>
                                    {% elseif ride.status == constant('App\\Enum\\RideStatus::PENDING') %}
                                        {% if app.user.hasBookedRide(ride) %}
                                            <div class="alert alert-success mb-0">
                                                <i class="bi bi-check-circle-fill me-1"></i>
                                                Vous avez déjà réservé ce trajet !
                                                <div class="mt-1 small text-muted">
                                                    Réservation effectuée le {{ app.user.getBookingForRide(ride).createdAt|date('d/m/Y à H:i') }}
                                                </div>
                                            </div>
                                        {% elseif ride.hasAvailableSeats() %}
                                            {% if app.user.credits >= ride.pricePerSeat %}
                                                <a href="{{ path('app_booking_confirm', {rideId: ride.id}) }}" class="btn btn-success btn-lg">
                                                    <i class="bi bi-calendar-plus me-1"></i> Participer ({{ ride.pricePerSeat|number_format(0) }} crédits)
                                                </a>
                                            {% else %}
                                                <div class="alert alert-warning mb-0">
                                                    <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                    Vous n'avez pas assez de crédits.
                                                    <div class="mt-2 d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <strong>Vos crédits :</strong> {{ app.user.credits|default(0)|number_format(0) }} |
                                                            <strong>Prix :</strong> {{ ride.pricePerSeat|number_format(0) }}
                                                        </div>
                                                        <a href="{{ path('app_profile') }}" class="btn btn-sm btn-outline-primary ms-2">
                                                            <i class="bi bi-plus-circle me-1"></i> Acheter des crédits
                                                        </a>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% else %}
                                            <div class="alert alert-danger mb-0">
                                                <i class="bi bi-x-circle-fill me-1"></i>
                                                Il n'y a plus de places disponibles.
                                            </div>
                                        {% endif %}
                                    {% else %}
                                        <div class="alert alert-secondary mb-0">
                                            <i class="bi bi-info-circle-fill me-1"></i>
                                            Ce trajet est {{ ride.status.getLabel()|lower }}.
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <div class="alert alert-primary mb-0">
                                        <i class="bi bi-person-fill me-1"></i>
                                        <a href="{{ path('app_login') }}" class="alert-link">Connectez-vous</a> ou
                                        <a href="{{ path('app_register') }}" class="alert-link">créez un compte</a>
                                        pour participer.
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Colonne droite: Véhicule -->
                        <div class="col-md-5">
                            <div class="card h-100">
                                <div class="card-body text-center p-4">
                                    <i class="bi bi-car-front display-4 text-muted mb-3"></i>
                                    <h5 class="card-title mb-2">{{ ride.car.brand }} {{ ride.car.model }}</h5>
                                    <div class="text-muted mb-3">
                                        <div class="d-flex justify-content-center mb-1">
                                            <i class="bi bi-credit-card-2-front me-1"></i>
                                            <span>{{ ride.car.licensePlate }}</span>
                                        </div>
                                        <div class="d-flex justify-content-center mb-1">
                                            <i class="bi bi-people me-1"></i>
                                            <span>{{ ride.car.seats|default(5) }} places</span>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <i class="bi bi-palette me-1"></i>
                                            <span>{{ ride.car.color|default('Non spécifiée') }}</span>
                                        </div>
                                    </div>
                                    {% if ride.car.isElectric %}
                                    <div class="card-footer bg-light">
                                        <span class="badge bg-success">
                                            <i class="bi bi-ev-front me-1"></i> Véhicule écologique
                                        </span>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section des passagers -->
            {% if ride.bookings|length > 0 %}
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3 d-flex align-items-center">
                        <i class="bi bi-people-fill me-2"></i> Passagers ({{ ride.bookings|length }})
                    </h5>

                    <div class="row g-3">
                        {% for booking in ride.bookings %}
                        <div class="col-md-4 col-lg-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <img src="{{ booking.passenger.profilePicture ? asset('uploads/profile_pictures/' ~ booking.passenger.profilePicture) : asset('img/default-avatar.svg') }}" alt="Avatar de {{ booking.passenger.getFullName()|default('Utilisateur') }}" class="rounded-circle mb-2" width="60" height="60" style="object-fit: cover;">
                                    <h6 class="card-title mb-1">{{ booking.passenger.pseudo|default('Utilisateur') }}</h6>
                                    <div class="text-muted small">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        {{ booking.createdAt|date('d/m/Y') }}
                                    </div>
                                    <div class="text-muted small mt-1">
                                        <span class="badge bg-primary">
                                            <i class="bi bi-person me-1"></i> {{ booking.seatsBooked }} place(s)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Modals (inchangés) -->
        {% if app.user == ride.driver and ride.status != 'CANCELLED' %}
        <div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
            <!-- ... (contenu du modal inchangé) ... -->
        </div>
        {% endif %}

        {% if app.user and app.user != ride.driver and ride.status == 'PENDING' and ride.availableSeats > 0 and not userBooking %}
        <div class="modal fade" id="bookingModal" tabindex="-1" aria-hidden="true">
            <!-- ... (contenu du modal inchangé) ... -->
        </div>
        {% endif %}
    </div>
</main>

{% block javascripts %}
    {{ parent() }}
    <script>
        // Mise à jour du prix total en fonction du nombre de places
        const bookingModal = document.getElementById('bookingModal');
        if (bookingModal) {
            const seatsInput = bookingModal.querySelector('input[name="seats"]');
            const totalPriceSpan = bookingModal.querySelector('#totalPrice');
            const pricePerSeat = {{ ride.pricePerSeat }};

            seatsInput.addEventListener('change', function() {
                const seats = parseInt(this.value);
                totalPriceSpan.textContent = (seats * pricePerSeat).toFixed(0);
            });
        }
    </script>
{% endblock %}
{% endblock %}
