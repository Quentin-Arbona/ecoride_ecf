{% extends 'layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
<div class="d-flex justify-content-center align-items-center" style="max-width: 30em; margin: auto;">
    <div class="mt-5 px-4 py-4 shadow-lg">
        <h2 class="page-title text-center">Inscription</h2>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(registrationForm, { 'attr': { 'id': 'inscriptionForm' } }) }}

            <div class="mb-3">
                {{ form_row(registrationForm.pseudo, {
                    'label': 'Pseudo',
                    'attr': { 'class': 'form-control', 'placeholder': 'Votre pseudo' },
                    'label_attr': { 'class': 'form-label' }
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(registrationForm.email, {
                    'label': 'Email',
                    'attr': { 'class': 'form-control', 'placeholder': 'adresse@mail.fr' },
                    'label_attr': { 'class': 'form-label' }
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword.first, {
                    'label': 'Mot de passe',
                    'attr': { 'class': 'form-control' }
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword.second, {
                    'label': 'Confirmer votre mot de passe',
                    'attr': { 'class': 'form-control' }
                }) }}
            </div>

            <div class="mb-3 form-check">
                {{ form_row(registrationForm.agreeTerms, {
                    'label': 'J\'accepte les conditions d\'utilisation',
                    'label_attr': { 'class': 'form-check-label' }
                }) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-inscription" id="ValidateSign">Inscription</button>
            </div>

        {{ form_end(registrationForm) }}

        <div class="text-center pt-3">
            <p>Vous avez déjà un compte ? <a class="form-link" href="{{ path('app_login') }}">Connectez-vous ici !</a></p>
        </div>
    </div>
</div>
{% endblock %}
