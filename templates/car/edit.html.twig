{% extends 'layout.html.twig' %}

{% block title %}Modifier un véhicule - EcoRide{% endblock %}

{% block content %}
<main class="bg-light py-4">
    <div class="container" style="max-width: 600px;">
        <div class="card shadow-sm">
            <div class="card-header text-white">
                <h1 class="h4 mb-0">
                    <i class="bi bi-pencil"></i> Modifier le véhicule
                </h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            {{ form_row(form.brand) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.model) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.color) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.licensePlate) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.seats) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.year) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.isElectric) }}
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-search w-100">
                                <i class="bi bi-check-circle"></i> Enregistrer les modifications
                            </button>
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary w-100 mt-2">
                                Annuler
                            </a>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</main>
{% endblock %}