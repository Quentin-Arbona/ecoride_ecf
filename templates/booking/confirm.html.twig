{% extends 'layout.html.twig' %}

{% block title %}Confirmation de réservation{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Confirmation de réservation</h2>

                    <div class="text-center mb-4">
                        <i class="bi bi-car-front-fill text-success" style="font-size: 3rem;"></i>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span><strong>Trajet :</strong></span>
                            <span>{{ ride.departurePlace }} → {{ ride.arrivalPlace }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span><strong>Date :</strong></span>
                            <span>{{ ride.departureDate|date('d/m/Y') }} à {{ ride.departureTime|date('H:i') }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span><strong>Prix par place :</strong></span>
                            <span>{{ ride.pricePerSeat|number_format(0) }} crédits</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span><strong>Vos crédits actuels :</strong></span>
                            <span>{{ userCredits|number_format(0) }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span><strong>Crédits restants :</strong></span>
                            <span class="fw-bold {{ (userCredits - ride.pricePerSeat) < 0 ? 'text-danger' : 'text-success' }}">
                                {{ (userCredits - ride.pricePerSeat)|number_format(0) }}
                            </span>
                        </div>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Cette action utilisera <strong>{{ ride.pricePerSeat|number_format(0) }}</strong> de vos crédits.
                    </div>

                    <form method="POST" action="{{ path('app_booking_create', {rideId: ride.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('booking_' ~ ride.id) }}">

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle-fill me-2"></i> Confirmer la réservation
                            </button>
                            <a href="{{ path('app_ride_show', {id: ride.id}) }}" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i> Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
