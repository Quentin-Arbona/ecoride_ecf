{% extends 'layout.html.twig' %}
{% block title %}Réinitialisation du mot de passe{% endblock %}
{% block content %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<main class="py-5">
    <section class="container">
        <h1 class="mb-5 text-center">Réinitialisation du mot de passe</h1>

        {{ form_start(requestForm) }}
            <p> Indiquez votre adresse mail, et nous vous enverrons un lien de réinitialisation du mot de passe.</p>
            {{ form_row(requestForm.email) }}


            <button class="btn btn-primary">Envoyer mail de réinitialisation</button>
        {{ form_end(requestForm) }}

        <p class="mt-3 mb-0 text-center">
            <a href="{{ path('app_login') }}">Retour à la connexion</a>
        </p>
    </section>
</main>
{% endblock %}
