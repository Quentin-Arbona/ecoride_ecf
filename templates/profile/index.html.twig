{% extends 'layout.html.twig' %}
{% block title %}Mon profil - EcoRide{% endblock %}



{% block content %}
<main class="bg-light py-4">
    <div class="container-xxl">
        <h1 class="page-title text-center mb-4">Mon profil</h1>

        {# Alerte pour les trajets en attente de feedback #}
        {% if bookingsAwaitingFeedback is defined and bookingsAwaitingFeedback is not empty %}
        <div class="alert alert-warning mb-4">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                <h5 class="mb-0">Trajets en attente de validation</h5>
            </div>
            <p class="mb-3">Vous avez <strong>{{ bookingsAwaitingFeedback|length }}</strong> trajet(s) terminé(s) en attente de votre avis :</p>
            <div class="row g-3">
                {% for booking in bookingsAwaitingFeedback %}
                <div class="col-md-6 col-lg-4">
                    <div class="card border-warning">
                        <div class="card-body">
                            <h6 class="card-title">
                                {{ booking.ride.departurePlace }} → {{ booking.ride.arrivalPlace }}
                            </h6>
                            <p class="card-text small text-muted mb-2">
                                <i class="bi bi-calendar me-1"></i>
                                {{ booking.ride.departureDate|date('d/m/Y') }}
                            </p>
                            <a href="{{ path('passenger_ride_feedback', {id: booking.id}) }}"
                               class="btn btn-warning btn-sm w-100">
                                <i class="bi bi-chat-text me-1"></i> Donner mon avis
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <div class="row g-4">
            <!-- Colonne GAUCHE : Infos personnelles + Crédits -->
            <div class="col-12 col-lg-4">
                <!-- Infos personnelles -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h2 class="h5 fw-bold mb-3 d-flex align-items-center">
                            <i class="bi bi-person-circle me-2"></i> Informations personnelles
                        </h2>
                        {# Photo de profil #}  
                        <div class="text-center mb-3">
                            {% if user.profilePicture %}
                                <img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicture) }}" 
                                        alt="Photo de profil"
                                        class="rounded-circle mb-2"
                                        style="width: 80px; height: 80px; object-fit: cover;">
                            {% else %}
                                <img src="{{ asset('img/default-avatar.svg')}}" alt="Photo de profil" class="rounded-circle mb-2" class="rounded-circle mb-2" style="width: 80px; height: 80px; object-fit: cover;">
                            {% endif %}
                        </div>

                    {% if not isEditing %}  
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Pseudo</span>
                                <span class="fw-semibold">{{ user.pseudo }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Email</span>
                                <div>
                                    <span class="fw-semibold">{{ user.email }}</span>
                                    {% if not user.isVerified %}
                                        <span class="badge bg-warning text-dark ms-2">
                                            <i class="bi bi-exclamation-triangle"></i> Non vérifié
                                        </span>
                                    {% else %}
                                        <span class="badge bg-success ms-2">
                                            <i class="bi bi-check-circle"></i> Vérifié
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Prénom</span>
                                <span class="fw-semibold">{{ user.firstName|default('Non renseigné') }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Nom</span>
                                <span class="fw-semibold">{{ user.lastName|default('Non renseigné') }}</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-muted small">Téléphone</span>
                                <span class="fw-semibold">{{ user.phone|default('Non renseigné') }}</span>
                            </div>
                        </div>

                        <a href="{{ path('app_profile_edit') }}" class="btn btn-search w-100 btn-sm">
                            <i class="bi bi-pencil"></i> Modifier mes informations
                        </a>
                    </div>
                </div>

                    {% else %}
                        {{ form_start(form) }}
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted small">Pseudo : </span>
                                            <span>{{ form_widget(form.pseudo, {
                                                'attr': {'class': 'form-control'}
                                            }) }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted small">Email</span>
                                            <span>{{ form_widget(form.email, {
                                                'attr': {'class': 'form-control'}
                                            }) }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted small">Prénom</span>
                                            <span>{{ form_widget(form.firstName, {
                                                'attr': {'class': 'form-control'}
                                            }) }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="text-muted small">Nom</span>
                                            <span>{{ form_widget(form.lastName, {
                                                'attr': {'class': 'form-control'}
                                            }) }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-4">
                                            <span class="text-muted small">Téléphone</span>
                                            <span>{{ form_widget(form.phone, {
                                                'attr': {'class': 'form-control'}
                                            }) }}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-4">
                                            {{ form_row(form.profilePicture, {
                                            'label': 'Photo de profil (JPG/PNG, max 2Mo)',
                                            'attr': {'accept': 'image/jpeg,image/png'}
                                        }) }}
                                        </div>
                                    </div>

                                    {# Boutons d'action #}
                                    <div class="d-flex justify-content-between">
                                        <button type="submit" class="btn btn-success">Enregistrer</button>
                                        <a href="{{ path('app_profile') }}" class="btn btn-secondary">Annuler</a>
                                    </div>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    {% endif %}

                <!-- Crédits -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="h5 fw-bold mb-3 d-flex align-items-center">
                            <i class="bi bi-coin me-2" style="color: #ffc107;"></i> Mes crédits
                        </h2>

                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-coin me-2" style="font-size: 1.5rem; color: #ffc107;"></i>
                                <div>
                                    <h3 class="mb-0">{{ user.credits|number_format(0) }}</h3>
                                    <p class="text-muted mb-0 small">Crédits disponibles</p>
                                </div>
                            </div>
                            {% if user.credits < 10 %}
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-exclamation-triangle-fill me-1"></i> Faible solde
                                </span>
                            {% endif %}
                        </div>

                        <form method="POST" class="mb-3">
                            <div class="input-group">
                                <input type="number"
                                       class="form-control"
                                       name="credits"
                                       min="1"
                                       max="1000"
                                       value="10"
                                       placeholder="Nombre de crédits"
                                       required>
                                <button class="btn btn-search" type="submit">
                                    <i class="bi bi-plus-circle"></i> Ajouter
                                </button>
                            </div>
                        </form>

                        <div class="alert alert-info small mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Ce système est factice. Les crédits sont ajoutés instantanément.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Colonne DROITE : Véhicules et Trajets -->
            <div class="col-12 col-lg-8">
                <!-- Véhicules -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h5 fw-bold mb-0 d-flex align-items-center">
                                <i class="bi bi-car-front-fill me-2"></i> Mes véhicules
                            </h2>
                            <a href="{{ path('app_car_new', {from: 'profile'}) }}" class="btn btn-search btn-sm">
                                <i class="bi bi-plus-circle"></i> Ajouter un véhicule
                            </a>
                        </div>

                        {% if cars is not empty %}
                            <div class="vehicle-list">
                                {% for car in cars %}
                                <div class="vehicle-card p-3 mb-3 border rounded {% if not car.isActive %}bg-light{% endif %}">
                                    <div class="d-flex justify-content-between">
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h3 class="h6 fw-bold mb-0">
                                                    {{ car.brand }} {{ car.model }}
                                                    {% if car.isElectric %}
                                                        <span class="badge bg-success ms-2">
                                                            <i class="bi bi-ev-front"></i> Électrique
                                                        </span>
                                                    {% endif %}
                                                    {% if not car.isActive %}
                                                        <span class="badge bg-secondary ms-2">Désactivé</span>
                                                    {% endif %}
                                                </h3>
                                            </div>

                                            <div class="vehicle-details small text-muted mb-2">
                                                {% if car.color %}
                                                    <p class="mb-1">
                                                        <i class="bi bi-palette me-1"></i> {{ car.color }}
                                                    </p>
                                                {% endif %}
                                                <p class="mb-1">
                                                    <i class="bi bi-credit-card-2-front me-1"></i> {{ car.licensePlate }}
                                                </p>
                                                {% if car.year %}
                                                    <p class="mb-1">
                                                        <i class="bi bi-calendar me-1"></i> {{ car.year }}
                                                    </p>
                                                {% endif %}
                                                <p class="mb-0">
                                                    <i class="bi bi-person me-1"></i> {{ car.seats }} place(s)
                                                </p>
                                            </div>
                                        </div>

                                        <div class="ms-2">
                                            <a href="{{ path('app_car_edit', {id: car.id}) }}"
                                               class="btn btn-sm btn-outline-secondary"
                                               title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_car_delete', {id: car.id}) }}"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce véhicule ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-info text-center">
                                <i class="bi bi-info-circle me-2"></i>
                                Aucun véhicule enregistré.
                                <a href="{{ path('app_car_new', {from: 'profile'}) }}" class="ms-2">
                                    Ajouter un véhicule
                                </a>
                                pour proposer des trajets.
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Proposer un trajet (si a des voitures) -->
                {% if cars is not empty %}
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="h5 fw-bold mb-0 d-flex align-items-center">
                                <i class="bi bi-plus-square me-2"></i> Proposer un trajet
                            </h2>
                            <a href="{{ path('app_ride_new') }}" class="btn btn-search btn-sm">
                                <i class="bi bi-plus-circle"></i> Créer un trajet
                            </a>
                        </div>
                        <p class="text-muted small mt-2 mb-0">
                            <i class="bi bi-info-circle"></i>
                            2 crédits sont prélevés par la plateforme pour chaque trajet proposé.
                        </p>
                    </div>
                </div>
                {% endif %}

                <!-- Mes trajets -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="h5 fw-bold mb-3 d-flex align-items-center">
                            <i class="bi bi-list-ul me-2"></i> Mes trajets
                        </h2>

                        <ul class="nav nav-tabs mb-3" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#trajets-proposes" role="tab">
                                    <i class="bi bi-steering-wheel me-1"></i> Trajets proposés ({{ ridesAsDriver|length }})
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#trajets-reserves" role="tab">
                                    <i class="bi bi-person me-1"></i> Trajets réservés ({{ bookingsAsPassenger|length }})
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <!-- Trajets proposés -->
                            <div class="tab-pane fade show active" id="trajets-proposes">
                                {% if ridesAsDriver is not empty %}
                                    {% for ride in ridesAsDriver %}
                                    <div class="card mb-2">
                                        <div class="card-body py-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <div class="d-flex align-items-center mb-1">
                                                        <strong>{{ ride.departurePlace }}</strong>
                                                        <i class="bi bi-arrow-right mx-2"></i>
                                                        <strong>{{ ride.arrivalPlace }}</strong>
                                                    </div>
                                                    <div class="small text-muted">
                                                        <div class="mb-1">
                                                            <i class="bi bi-calendar-event me-1"></i>
                                                            {{ ride.departureDate|date('d/m/Y') }} à {{ ride.departureTime|date('H:i') }}
                                                        </div>
                                                        <div class="mb-1">
                                                            <i class="bi bi-people me-1"></i>
                                                            {{ ride.bookedSeatsCount }}/{{ ride.availableSeats }} places réservées
                                                        </div>
                                                        <div>
                                                            <i class="bi bi-coin me-1"></i>
                                                            {{ ride.pricePerSeat|number_format(0) }} crédits par place
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="text-end">
                                                    <span class="badge bg-{{ ride.status == constant('App\\Enum\\RideStatus::PENDING') ? 'warning' :
                                                                          ride.status == constant('App\\Enum\\RideStatus::ACTIVE') ? 'info' :
                                                                          ride.status == constant('App\\Enum\\RideStatus::COMPLETED') ? 'success' : 'danger' }}">
                                                        {{ ride.status.getLabel() }}
                                                    </span>
                                                    <div class="mt-3">
                                                        <a href="{{ path('app_ride_show', {id: ride.id}) }}" class="btn btn-sm btn-secondary">
                                                            Détails
                                                        </a>
                                                    </div>

                                                    <div class="mt-3">
                                                        {# Bouton "Démarrer" si le trajet est en attente (PENDING) #}
                                                        {% if ride.status == constant('App\\Enum\\RideStatus::PENDING') %}
                                                            <form method="post" action="{{ path('driver_ride_start', {'id': ride.id}) }}" class="d-inline">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('start_ride_' ~ ride.id) }}">
                                                                <button type="submit" class="btn btn-sm btn-search"><i class="bi bi-skip-start-fill"></i> Démarrer le trajet</button>
                                                            </form>
                                                        {# Bouton "Arrêter" si le trajet est en cours (ACTIVE) #}
                                                        {% elseif ride.status == constant('App\\Enum\\RideStatus::ACTIVE') %}
                                                            <form method="post" action="{{ path('driver_ride_end', {'id': ride.id}) }}" class="d-inline">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('end_ride_' ~ ride.id) }}">
                                                                <button type="submit" class="btn btn-danger">Arrivée à destination</button>
                                                            </form>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}

                                {% else %}
                                    <div class="text-center py-3 text-muted">
                                        <i class="bi bi-calendar-x fs-4 mb-2"></i>
                                        <p class="mb-0">Aucun trajet proposé pour le moment</p>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Trajets réservés -->
                            <div class="tab-pane fade" id="trajets-reserves">
                                {% if bookingsAsPassenger is not empty %}
                                    {% for booking in bookingsAsPassenger %}
                                    <div class="card mb-2">
                                        <div class="card-body py-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <div class="d-flex align-items-center mb-1">
                                                        <strong>{{ booking.ride.departurePlace }}</strong>
                                                        <i class="bi bi-arrow-right mx-2"></i>
                                                        <strong>{{ booking.ride.arrivalPlace }}</strong>
                                                    </div>
                                                    <div class="small text-muted">
                                                        <span class="me-3">
                                                            <i class="bi bi-calendar-event me-1"></i>
                                                            {{ booking.ride.departureDate|date('d/m/Y') }} à {{ booking.ride.departureTime|date('H:i') }}
                                                        </span>
                                                        <span class="me-3">
                                                            <i class="bi bi-people me-1"></i>
                                                            {{ booking.seatsBooked }} place(s)
                                                        </span>
                                                        <span>
                                                            <i class="bi bi-currency-euro me-1"></i>
                                                            {{ booking.totalPrice|number_format(0) }} crédits
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="text-end">
                                                    <span class="badge bg-{{ booking.status == constant('App\\Enum\\BookingStatus::PENDING') ? 'warning' :
                                                                          booking.status == constant('App\\Enum\\BookingStatus::CONFIRMED') ? 'success' : 'danger' }}">
                                                        {{ booking.status.getLabel() }}
                                                    </span>
                                                    <div class="mt-1">
                                                        <a href="{{ path('app_ride_show', {id: booking.ride.id}) }}" class="btn btn-sm btn-search">
                                                            Détails
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="text-center py-3 text-muted">
                                        <i class="bi bi-calendar-x fs-4 mb-2"></i>
                                        <p class="mb-0">Aucun trajet réservé pour le moment</p>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
