{% extends 'layout.html.twig' %}

{% block title %}Tableau de bord - Employé{% endblock %}

{% block content %}
<div class="container py-4">
    <h1 class="mb-4">
        <i class="bi bi-speedometer2 me-2"></i>Tableau de bord employé
    </h1>

    <div class="row g-4 mb-4">
        <!-- Carte Avis en attente -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h5 class="card-title text-primary mb-1">
                                <i class="bi bi-shield-check me-2"></i>Avis à modérer
                            </h5>
                            <p class="card-text text-muted small mb-0">
                                Validation des avis passagers
                            </p>
                        </div>
                        <span class="badge bg-primary rounded-pill fs-4">
                            {{ pendingReviewsCount }}
                        </span>
                    </div>

                    {% if pendingReviewsCount > 0 %}
                        <div class="alert alert-warning mb-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>{{ pendingReviewsCount }}</strong> avis en attente de validation
                        </div>
                        <a href="{{ path('employee_reviews_list') }}" class="btn btn-primary w-100">
                            <i class="bi bi-eye me-1"></i> Voir les avis
                        </a>
                    {% else %}
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle me-2"></i>
                            Tous les avis ont été traités
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Carte Litiges -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h5 class="card-title text-danger mb-1">
                                <i class="bi bi-exclamation-triangle me-2"></i>Litiges actifs
                            </h5>
                            <p class="card-text text-muted small mb-0">
                                Résolution des conflits
                            </p>
                        </div>
                        <span class="badge bg-danger rounded-pill fs-4">
                            {{ disputesCount }}
                        </span>
                    </div>

                    {% if disputesCount > 0 %}
                        <div class="alert alert-danger mb-3">
                            <i class="bi bi-flag-fill me-2"></i>
                            <strong>{{ disputesCount }}</strong> litige(s) à traiter
                        </div>
                        <a href="{{ path('employee_disputes_list') }}" class="btn btn-danger w-100">
                            <i class="bi bi-wrench me-1"></i> Gérer les litiges
                        </a>
                    {% else %}
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle me-2"></i>
                            Aucun litige en cours
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques et actions rapides -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check me-2"></i>Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="d-grid">
                                <a href="{{ path('employee_reviews_list') }}" class="btn btn-outline-primary">
                                    <i class="bi bi-chat-quote me-2"></i>
                                    Modérer les avis
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-grid">
                                <a href="{{ path('employee_disputes_list') }}" class="btn btn-outline-danger">
                                    <i class="bi bi-flag me-2"></i>
                                    Gérer les litiges
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-grid">
                                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-house me-2"></i>
                                    Retour à l'accueil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if pendingReviewsCount == 0 and disputesCount == 0 %}
    <div class="text-center mt-5">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        <h3 class="mt-3 text-success">Tout est en ordre !</h3>
        <p class="text-muted">Aucune action requise pour le moment.</p>
    </div>
    {% endif %}
</div>
{% endblock %}
